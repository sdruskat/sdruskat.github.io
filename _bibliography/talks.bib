@misc{druskat_entwurf_2016,
	address = {Helmholtz Open Science Workshop ``Zugang zu und Nachnutzung von wissenschaftlicher Software'', Dresden, Germany},
	title = {`Entwurf eines {Metadatenrepositoriums} zur {Erfassung} technischer {Nachhaltigkeit} von {Forschungssoftware}'},
	copyright = {All rights reserved},
	url = {https://doi.org/10.5281/zenodo.168383},
	abstract = {Die ressourcenbezogene Nachhaltigkeit von Forschungssoftware ist abhängig von ihrer technischen Nachhaltigkeit. Die Ziele letzterer können definiert werden als 1. Sicherung der Existenz der Software, 2. Erhaltung ihres Produktivpotentials, 3. Schaffung und Erhalt ihres Potenzials für Weiterentwicklung und Adaption. Der Zugang zu existierender, geeigneter und technisch nachhaltiger Software scheitert häufig an fehlender Auffindbarkeit sowie ungenügender Dokumentation der technischen Nachhaltigkeit. Abhilfe schaffen kann ein Metadatenrepositorium, das neben der Anwendungsdokumentation Maße bereitstellt, die das Potenzial technischer Nachhaltigkeit einer Software abbilden. Bereits existierende Plattformen tun dies nicht, in ungenügendem Umfang oder nur implizit. Nachhaltigkeitsmaße müssen auf Kriterien basieren, die sich nach ihrer Objektivität und Quantifizierbarkeit auf Grundlage der drei Nachhaltigkeitsziele kategorisieren lassen. Erweiterbare Grundlage für diese Kriterienkataloge bieten u.a. das kriterienbasierte Assessment des SSI und das Projekt CodeMeta. Zusätzlich lassen sich durch Interaktivität, wie bspw. die Dokumentation von Softwaregebrauch durch Verknüpfung mit Veröffentlichungen oder die Erfassung subjektiverer Datenpunkte wie Nutzbarkeit, wertvolle weitere Anhaltspunkte für Nachhaltigkeit gewinnen. Die unterschiedliche Qualität der Metadaten - von subjektiv und nicht-quantifizierbar bis objektiv und quantifizierbar - legt eine nach Härte und Reproduzierbarkeit gestaffelte Messung und Dokumentation über mehrere Maße nah. Während solch ein Repositorium ein geeigneter Dokumentationsträger für Softwaremanagementpläne wäre, sind aber mindestens folgende Hürden zu überwinden: 1. Operationalisierbare Definition technischer Nachhaltigkeit; 2. Definition, Katalogisierung und Kategorisierung von Nachhaltigkeitskriterien; 3. Entwurf genauer, reproduzierbarer, manipulationssicherer und nachvollziehbarer Maße; 4. Entwurf von Berechnungsalgorithmen für diese Maße.},
	author = {Druskat, Stephan},
	month = nov,
	year = {2016},
	doi = {10.5281/zenodo.168383},
	note = {Published: Talk given at Helmholtz Open Science Workshop „Zugang zu und Nachnutzung von wissenschaftlicher Software“, Helmholtz-Zentrum Dresden-Rossendorf}
}

@misc{druskat_research_2017,
	address = {OpenTechSummit 2017, Potsdam, Germany},
	title = {`Research {Software} {Engineers}: {The} people behind research software'},
	copyright = {All rights reserved},
	abstract = {Software has become a cornerstone of scientific research. At least since the advent of the Digital Humanities it has undoubtedly influenced methods of, and provided research objects for, almost every scientific discipline. Software development, therefore, has in turn itself become an essential part of research. The importance of research software and its development for the research process, however, is still not sufficiently mapped to recognition, reward systems, reputation, visibility, availability, job decriptions, trainings, quality standards and academic structures. Research Software Engineers (RSEs) are software developers, coding researchers, innovators, scripting administrators, software project managers, and everyone else, regardless of skill sets, who is involved in software-related work; simply put: "people who work in research and care about software". They are all brought together in the RSE community to set a focus on current challenges and develop solutions. In Germany, they are represented by the de-RSE chapter, a young and continuously growing federal initiative. It provides a forum for all those with an interest in the development of research software and its role in the academic ecosystem, irrespective of their discipline, job description, education and experience.},
	author = {Druskat, Stephan},
	month = may,
	year = {2017},
	note = {Published: Talk given at OpenTechSummit 2017, Potsdam, Germany, 25 May 2017}
}

